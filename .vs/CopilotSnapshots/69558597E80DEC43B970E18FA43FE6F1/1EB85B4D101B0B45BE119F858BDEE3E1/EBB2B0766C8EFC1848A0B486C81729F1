@code {
private JeopardyGameService gameService = new();
private bool showAnswer = false;
private int? editingPlayer = null;
private string editingName = "";

private async Task SelectQuestion(JeopardyQuestion question)
{
    if (!question.IsAnswered)
    {
        showAnswer = false;
        gameService.SelectQuestion(question);
            
        // Play different sound for Daily Double vs regular questions
        if (question.IsBonus)
        {
            await PlayDailyDoubleSound();
        }
        else
        {
            await PlayChimeSound();
        }
    }
}

private async Task PlayChimeSound()
{
    try
    {
        await JS.InvokeVoidAsync("playChime");
    }
    catch
    {
        // Sound not available, continue without it
    }
}

private async Task PlayDailyDoubleSound()
{
    try
    {
        await JS.InvokeVoidAsync("playDailyDouble");
    }
    catch
    {
        // Sound not available, continue without it
    }
}

private void RevealAnswer()
{
    showAnswer = true;
}

private void SubmitAnswer(bool isCorrect, int playerNumber)
{
    gameService.AnswerQuestion(isCorrect, playerNumber);
    showAnswer = false;
}

private void CloseModal()
{
    gameService.CloseQuestion();
    showAnswer = false;
}

private void RestartGame()
{
    gameService.InitializeGameKeepPlayers();
    showAnswer = false;
    editingPlayer = null;
}

private void AddPlayer()
{
    gameService.AddPlayer();
}

private void RemovePlayer(int playerId)
{
    gameService.RemovePlayer(playerId);
    if (editingPlayer == playerId)
    {
        editingPlayer = null;
        editingName = "";
    }
}

private void StartEditingPlayer(int playerNum)
{
    editingPlayer = playerNum;
    editingName = gameService.PlayerNames[playerNum];
}

private void SavePlayerName(int playerNum)
{
    if (!string.IsNullOrWhiteSpace(editingName))
    {
        gameService.SetPlayerName(playerNum, editingName.Trim());
    }
    editingPlayer = null;
    editingName = "";
}

private void HandleKeyDown(KeyboardEventArgs e, int playerNum)
{
    if (e.Key == "Enter")
    {
        SavePlayerName(playerNum);
    }
    else if (e.Key == "Escape")
        {
            editingPlayer = null;
            editingName = "";
        }
    }
}
