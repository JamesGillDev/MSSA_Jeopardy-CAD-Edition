@code {
    private JeopardyGameService gameService = new();
    private bool showAnswer = false;
    private int? editingPlayer = null;
    private string editingName = "";

    private void SelectQuestion(JeopardyQuestion question)
    {
        if (!question.IsAnswered)
        {
            showAnswer = false;
            gameService.SelectQuestion(question);
        }
    }

    private void RevealAnswer()
    {
        showAnswer = true;
    }

    private void SubmitAnswer(bool isCorrect, int playerNumber)
    {
        gameService.AnswerQuestion(isCorrect, playerNumber);
        showAnswer = false;
    }

    private void CloseModal()
    {
        gameService.CloseQuestion();
        showAnswer = false;
    }

    private void RestartGame()
    {
        gameService.InitializeGame();
        showAnswer = false;
        editingPlayer = null;
    }

    private void StartEditingPlayer(int playerNum)
    {
        editingPlayer = playerNum;
        editingName = gameService.PlayerNames[playerNum];
    }

    private void SavePlayerName(int playerNum)
    {
        if (!string.IsNullOrWhiteSpace(editingName))
        {
            gameService.SetPlayerName(playerNum, editingName.Trim());
        }
        editingPlayer = null;
        editingName = "";
    }

    private void HandleKeyDown(KeyboardEventArgs e, int playerNum)
    {
        if (e.Key == "Enter")
        {
            SavePlayerName(playerNum);
        }
        else if (e.Key == "Escape")
        {
            editingPlayer = null;
            editingName = "";
        }
    }
}
