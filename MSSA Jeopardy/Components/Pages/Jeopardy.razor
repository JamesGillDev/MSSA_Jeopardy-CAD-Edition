        inset -3px 0 6px rgba(0,0,0,0.2),
        2px 2px 6px rgba(0,0,0,0.5);
    position: relative;
    overflow: hidden;
}

/* TV screen curved glass effect */
.question-cell::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(180deg, rgba(255,255,255,0.15) 0%, rgba(255,255,255,0.03) 50%, rgba(255,255,255,0) 100%);
    border-radius: 3px 3px 50% 50%;
    pointer-events: none;
}

/* TV screen side reflection */
.question-cell::after {
    content: '';
    position: absolute;
    top: 10%;
    left: 5%;
    width: 15%;
    height: 30%;
    background: linear-gradient(135deg, rgba(255,255,255,0.12) 0%, rgba(255,255,255,0) 100%);
    border-radius: 50%;
    pointer-events: none;
}

