@page "/jeopardy"
@using MSSA_Jeopardy_.Services
@using MSSA_Jeopardy_.Models
@inject IJSRuntime JS
@rendermode InteractiveWebAssembly

<PageTitle>MSSA Jeopardy!</PageTitle>

<div class="jeopardy-container">
    @if (!gameService.GameStarted)
    {
        <!-- Category Selection Screen -->
        <div class="category-selection">
            <h1>MSSA JEOPARDY!</h1>
            <h2>Select 6 Categories</h2>
            <p class="selection-count">Selected: @selectedCategories.Count / 6</p>
            
            <div class="category-grid">
                @foreach (var category in gameService.AllCategoryNames)
                {
                    var cat = category;
                    var isSelected = selectedCategories.Contains(cat);
                    <div class="category-option @(isSelected ? "selected" : "") @(selectedCategories.Count >= 6 && !isSelected ? "disabled" : "")"
                         @onclick="() => ToggleCategory(cat)">
                        <span class="category-name">@cat</span>
                        @if (isSelected)
                        {
                            <span class="check-mark">✓</span>
                        }
                    </div>
                }
            </div>

            <div class="players-setup">
                <h3>Players</h3>
                <div class="players-display">
                    @foreach (var playerId in gameService.GetPlayerIds())
                    {
                        var pid = playerId;
                        <div class="player-score">
                            @if (editingPlayer == pid)
                            {
                                <input type="text" class="player-name-input" 
                                       @bind="editingName" 
                                       @bind:event="oninput"
                                       @onblur="() => SavePlayerName(pid)"
                                       @onkeydown="(e) => HandleKeyDown(e, pid)" />
                            }
                            else
                            {
                                <span class="player-name" @onclick="() => StartEditingPlayer(pid)">
                                    @gameService.PlayerNames[pid] ✏️
                                </span>
                            }
                            @if (gameService.TotalPlayers > 1)
                            {
                                <button class="btn-remove-player-setup" @onclick="() => RemovePlayer(pid)">×</button>
                            }
                        </div>
                    }
                </div>
                <button class="btn-add-player" @onclick="AddPlayer">+ Add Player</button>
            </div>

            <button class="btn-start-game @(selectedCategories.Count < 6 ? "disabled" : "")" 
                    @onclick="StartGame" 
                    disabled="@(selectedCategories.Count < 6)">
                Start Game
            </button>
        </div>
    }
    else
    {
        <!-- Game Header -->
        <div class="jeopardy-header">
            <h1>MSSA Cloud Application Development</h1>
            <h2>JEOPARDY!</h2>
            <div class="players-section">
                <div class="players-display">
                    @foreach (var playerId in gameService.GetPlayerIds())
                    {
                        var pid = playerId;
                        <div class="player-score @(gameService.CurrentPlayer == pid ? "active-player" : "")">
                            @if (editingPlayer == pid)
                            {
                                <input type="text" class="player-name-input" 
                                       @bind="editingName" 
                                       @bind:event="oninput"
                                       @onblur="() => SavePlayerName(pid)"
                                       @onkeydown="(e) => HandleKeyDown(e, pid)" />
                            }
                            else
                            {
                                <span class="player-name" @onclick="() => StartEditingPlayer(pid)">
                                    @gameService.PlayerNames[pid]
                                    <span class="edit-icon">✏️</span>
                                </span>
                            }
                            <span class="player-points @(gameService.PlayerScores[pid] >= 0 ? "positive" : "negative")">
                                $@gameService.PlayerScores[pid].ToString("N0")
                            </span>
                            @if (gameService.TotalPlayers > 1)
                            {
                                <button class="btn-remove-player" @onclick="() => RemovePlayer(pid)" title="Remove player">×</button>
                            }
                        </div>
                    }
                </div>
                <div class="player-controls">
                    <button class="btn-add-player" @onclick="AddPlayer" title="Add player">+ Add Player</button>
                </div>
            </div>
            <div class="current-turn">
                Current Turn: <strong>@gameService.PlayerNames[gameService.CurrentPlayer]</strong>
            </div>
        </div>

        @if (gameService.IsGameComplete())
        {
            <div class="game-complete">
                <h2>Game Complete!</h2>
                <p>Winner: <strong>@gameService.PlayerNames[gameService.GetWinner()]</strong> with $@gameService.GetHighestScore().ToString("N0")!</p>
                <div class="final-scores">
                    <h3>Final Scores:</h3>
                    @foreach (var playerId in gameService.GetPlayerIds())
                    {
                        var pid = playerId;
                        <p>@gameService.PlayerNames[pid]: $@gameService.PlayerScores[pid].ToString("N0")</p>
                    }
                </div>
                <button class="btn-play-again" @onclick="RestartGame">Play Again</button>
                <button class="btn-back-menu" @onclick="BackToMenu">Change Categories</button>
            </div>
        }
        else if (gameService.CurrentQuestion != null)
        {
            <div class="question-modal-overlay" @onclick="CloseModal">
                <div class="question-modal @(gameService.CurrentQuestion.IsBonus ? "daily-double-modal" : "")" @onclick:stopPropagation="true">
                    @if (gameService.CurrentQuestion.IsBonus)
                    {
                        <div class="daily-double-banner">DAILY DOUBLE!</div>
                    }
                    <div class="question-category">@gameService.CurrentQuestion.Category</div>
                    <div class="question-value">
                        $@(gameService.CurrentQuestion.IsBonus ? gameService.CurrentQuestion.PointValue * 2 : gameService.CurrentQuestion.PointValue)
                    @if (gameService.CurrentQuestion.IsBonus)
                    {
                        <span class="daily-double-label">(2x Points)</span>
                    }
                </div>
                <div class="question-text">@gameService.CurrentQuestion.Question</div>
                
                @if (showAnswer)
                {
                    <div class="answer-section">
                        <div class="answer-text">@gameService.CurrentQuestion.Answer</div>
                        <div class="player-answer-section">
                            <p>Who answered correctly?</p>
                            <div class="answer-buttons">
                                @foreach (var playerId in gameService.GetPlayerIds())
                                {
                                    var pid = playerId;
                                    <button class="btn-player" @onclick="() => SubmitAnswer(true, pid)">@gameService.PlayerNames[pid]</button>
                                }
                            </div>
                            <button class="btn-incorrect" @onclick="() => SubmitAnswer(false, gameService.CurrentPlayer)">No One Got It</button>
                        </div>
                    </div>
                }
                else
                {
                    <button class="btn-reveal" @onclick="RevealAnswer">Reveal Answer</button>
                }
            </div>
            </div>
        }

        <div class="game-board">
            @foreach (var category in gameService.Categories)
            {
                <div class="category-column">
                    <div class="category-header">@category.Name</div>
                    @foreach (var question in category.Questions.OrderBy(q => q.PointValue))
                    {
                        <div class="question-cell @(question.IsAnswered ? "answered" : "")" 
                             @onclick="() => SelectQuestion(question)">
                            @if (!question.IsAnswered)
                            {
                                <span>$@question.PointValue</span>
                            }
                        </div>
                    }
                </div>
            }
        </div>

        <div class="game-controls">
            <button class="btn-restart" @onclick="RestartGame">New Game</button>
            <button class="btn-back-menu" @onclick="BackToMenu">Change Categories</button>
        </div>
    }
</div>

